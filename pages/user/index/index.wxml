<view class="container1">
    <view class="nav">
        <view class="left">
            <view class="text1">现在预约</view>
            <view class="text2" >RESERVE NOW</view>
        </view>
       <view class="right">
            <view class="top">
                <view class="text1">预约记录</view>
                <view class="text2">MY RESERVATION</view>
            </view>
            <view class="down">
                <view class="borrow">
                    <view class="text1">借用设备</view>
                    <view class="text2">BORROWED</view>
                </view>
                <view class="credit">
                    <view class="text1">信用记录</view>
                    <view class="text2">CREDIT</view>
                </view>
            </view>
        </view>  
    </view>
</view>
<view class="hot">
        <view class="topic">
            <image src="/img/user/decoration1.png"></image>
            <text>TOP</text>
        </view>
</view>
<view class="message">
    <view class="topic">
        <image src="/img/user/decoration1.png"></image>
        <text>新的消息</text>
    </view>
</view>

<!-- 底部导航 -->
<view class="footer">
    <view class="box">
        <view data-index="{{index}}" bindtap="navigate" wx:for="{{navigator}}" wx:key="{{index}}">
            <view class="choice">
                <image src="{{item.img}}"></image>
                <text>{{item.name}}</text>
            </view>
        </view>
    </view>
</view>
