.hot .topic {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    font-size: 32rpx;
}

.hot .topic image {
    width: 64rpx;
    height: 40rpx;
}

.message .topic {
    margin-top: 20rpx;
    display: flex;
    align-items: center;
    font-size: 32rpx;
}

.message .topic image {
    width: 64rpx;
    height: 40rpx;
}

.messageDetail {
    border-radius: 5%;
    background-color: white;
    width: 90%;
    margin: 20rpx auto;
}

.messageDetail .topic {
    font-weight: bold;
    font-size: 36rpx;
    margin-left: 40rpx;
    margin-top: 10rpx;
}

.messageDetail .content {
    font-size: 32rpx;
    margin:  0rpx 40rpx;
    padding-top: 20rpx;
    white-space: pre-wrap;
}

.messageDetail .time {
    margin: 20rpx 40rpx;
    font-size: 30rpx;
    color: #aaaaaa;
    margin-left: 40rpx;
    padding-bottom: 20rpx;
}

.footer {
    position: fixed;
    bottom: 0;
    width: 750rpx;
    background-color: #ffffff;  
    border-top: 2rpx solid #cccccc;
    padding-top: 20rpx;
}

.footer .box {
    display: flex;
    justify-content: center;
}

.footer image {
    width: 60rpx;
    height: 60rpx;
}

.footer .choice {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    margin: 0 100rpx;
    font-size: 30rpx;
}