    width: 750rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.nav {
    display: flex;
}

.nav .left {
    width: 337rpx;
    height: 350rpx;
    background-color: rgba(238,230,227,0.7);
    margin-right: 10rpx;
    /* padding-top: 40rpx; */
    
}

.nav .left .text1 {
    font-size: 40rpx; 
    font-weight: 600;
    margin-left: 40rpx;
    margin-top: 40rpx;
    margin-bottom: 10rpx;
}

.nav .left .text2 {
    font-size: 25rpx; 
    margin-left: 40rpx;
}

.nav .right {
    width: 375rpx;
}

.nav .right .top {
    height: 200rpx;
    background-color: rgba(238,230,227,0.7);
