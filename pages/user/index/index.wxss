    margin-top: 10rpx;
}

.nav .right .down .credit{
    width: 50%;
    height: 140rpx;
    background-color: rgba(238,230,227,0.7);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.nav .right .down .credit .text1 {
    font-size: 35rpx; 
}

.nav .right .down .credit .text2 {
    font-size: 20rpx; 
