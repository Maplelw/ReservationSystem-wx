    display: flex;
}

.nav .right .down .borrow{
    width: 50%;
    height: 140rpx;
    background-color: rgba(238,230,227,0.7);
    margin-right: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.nav .right .down .borrow .text1 {
    font-size: 35rpx; 
