<!-- 头部选项 -->
<view class="top">
    <text bindtap="toHot" style="color:{{hotColor}}">热门</text>
    <text bindtap="toAll" style="color:{{allColor}}">所有</text>
</view>
<!-- 中间数据 -->
<view wx:if="{{choice === 'hot'}}">
    <view class="device" data-index="{{index}}" wx:for="{{hotDevice}}" wx:key="{{index}}" bindtap="getDetails">
        <view class="img">
            <image src="/img/global/device.png"></image>
        </view>
        <view class="device_info">
            <text style="font-size:32rpx;">{{item.d_no}}</text>
            <text style="font-size:32rpx;">{{item.d_name}}</text>

        </view>
    </view>
</view>
<!-- 所有 -->
<view wx:else>
    <!-- 搜索框 -->
    <!-- <view class="searchTop" bindtap="search">
        <view class="search">
            <view style="display:flex">
                <image src="/img/admin/search.png"></image>
                <text>搜索设备名称或编号</text>
            </view>
        </view>
    </view> -->
    <!-- 设备列表 -->
    <view class="device" data-index="{{index}}" wx:for="{{allDevice}}" wx:key="{{index}}" bindtap="getDetails">
        <view class="img">
            <image src="/img/global/device.png"></image>
        </view>
        <view class="device_info">
            <text style="font-size:32rpx;">{{item.d_no}}</text>
            <text style="font-size:32rpx;">{{item.d_name}}</text>
        </view>
    </view>
</view>
<!-- 底部导航 -->
<view class="footer">
    <view class="box">
        <view data-index="{{index}}" bindtap="navigate" wx:for="{{navigator}}" wx:key="{{index}}">
            <view class="choice">
                <image src="{{item.img}}"></image>
                <text>{{item.name}}</text>
            </view>
        </view>
    </view>
</view>