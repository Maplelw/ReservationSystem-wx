.device {
    display: flex;
    border-bottom: 2rpx solid #eeeeee;
    padding: 15rpx;
}

.device_info {
    width: 75%;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.device .img {
    width:25%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.device image {
    width: 120rpx;
    height: 100rpx;
}

/* 搜索框 */
.searchTop {
    height: 80rpx;
    background-color: #F1F1F1;
    display: flex;
    align-items: center;
    /* background-color: rgba(244, 244, 244, 1); */
}

.search {
    padding-left: 20rpx;
    font-size: 35rpx;
    display: flex;
    align-items: center;  
}

.search image {
    width: 50rpx;
    height: 50rpx;
    margin-right: 20rpx;
}

.search input {
    width: 400rpx;
}
