.expression {
    width: 100%;
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.expression image {
    width: 100rpx;
    height: 100rpx;
    margin: 40rpx;
}

.comment {
    height: 200rpx;
    width: 100%;
    display: flex;
    justify-content: center;
}

.comment textarea {
    width: 90%;
    background-color: rgba(244, 244, 244, 0.5);
    padding: 15rpx;
    font-size: 32rpx;
}

.submit {
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: center;
}

.submit button {
    width: 90%;
    color: white;
    background-color: #89afd4;
    margin: 10rpx;
    font-size: 38rpx;
}