page {
    background-color: rgb(244, 244, 244)
}

.header {
    background-color: #fff;
    height: 300rpx;
    width: 100%;
    border-top: 4rpx solid #eee;
}

.topic {
    display: flex;
}

.topic text{
    margin-top: 40rpx;
    margin-left: 40rpx;
}

.header .score {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.mid {
    margin: 20rpx 20rpx 0 20rpx;
    font-size: 42rpx;
    color: #3E606F;
    font-weight: 500;
}

.all {
    background-color: #fff;
    margin-top: 25rpx;
    width: 95%;
    margin: 20rpx auto;
    border-radius: 4%;
}

.all .top {
    padding: 20rpx;
    border-bottom: 4rpx solid rgb(244, 244, 244);
}

.all .top text {
    font-size: 32rpx;
    margin-right: 10rpx;
}

.all .top .currentScore {
    color: #888;
    float:right;
    line-height:52rpx
}


.all .down {
    padding: 20rpx 40rpx 10rpx 40rpx;
    border-color: #fff;
    display: flex;
    align-items: center;
}

.all .down .changeReason {
    width: 90%;
}

.all .down text {
    font-size: 32rpx;
    margin: 5rpx;
}

.all .down .changeScore {
    display: flex;
    justify-content: flex-end;
    padding: 20rpx;
    width: 10%;
}

.all .changeScore .add {
    color: #89AFD4;
}

.all .changeScore .minus {
    color: red;
}