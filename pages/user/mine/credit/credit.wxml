<view class="top">
    <view class="topic">
        <text style="font-size: 35rpx; color: #3E606F">您的信用评分</text>
    </view>
    <view class="score">
        <text style="font-size: 80rpx;">{{u_credit_score}}</text>
        <text style="font-size: 30rpx; color: #AAAAAA">{{comment}}</text>
    </view>
</view>

<view class="container1">
    <text style="font-size: 42rpx;">信用记录</text>
</view>

