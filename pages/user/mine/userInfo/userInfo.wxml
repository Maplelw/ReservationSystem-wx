<view>
    <view class="icon">
        <open-data type="userAvatarUrl"></open-data>
    </view>
    <open-data class="username" type="userNickName"></open-data>
</view>

<view class="main">
    <view class="edit">
        <text style="font-size">基本信息</text>
        <text style="font-size: 30rpx; color:#868686">编辑</text>
    </view>
    <view class="info">
        <view class="left_info">
            <text>姓名\n</text>
            <text>学号\n</text>
            <text>手机\n</text>
            <text>邮箱\n</text>
            <text>类型\n</text>
            <text>班级\n</text>
        </view>
        <view class="right_info">
            <text>{{user.u_name}}\n</text>
            <text>{{user.u_no}}\n</text>
            <text>{{user.u_phone}}\n</text>
            <text>{{user.u_email}}\n</text>
            <text>{{user.u_type}}\n</text>
            <text>{{user.u_majorClass}}\n</text>
        </view>
    </view>
</view>

