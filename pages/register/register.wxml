<form bindsubmit="formSubmit">
    <view class="inputs">
        <text>姓名</text>
        <input type="text" placeholder="请输入姓名" name="user_name"></input>
    </view>
    <view class="inputs">
        <text>学工号</text>
        <input type="text" placeholder="请输入设备学工号" name="user_id"></input>
    </view>
     <view class="inputs">
        <text>身份</text>
        <input type="text" placeholder="老师/学生" name="permmision"></input>
    </view>
    <view class="inputs">
        <text>手机号</text>
        <input type="text" placeholder="请输入手机号码" name="phone_number"></input>
    </view>
   <view class="inputs">
        <text>邮箱</text>
        <input type="text" placeholder="请输入邮箱" name="email"></input>
    </view>
    <view class="inputs">
        <text>班级</text>
        <input type="text" placeholder="例如：软件1703" name="class_id"></input>
    </view>
    <view class="bottom">
        <button type="primary" form-type="submit" open-type="getUserInfo" bindgetuserinfo="getUserInfo">提交</button>
    </view>
</form>