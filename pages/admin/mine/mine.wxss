.icon {
    display: flex;
    justify-content: center;
}

.icon image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.username {
    margin: 10rpx 0;
    justify-content: center;
    display: flex;
}

.gap {
    width: 100%;
    height: 80rpx;
    background-color: #efefef;
}

.gap text {
    line-height: 80rpx;
    font-size: 30rpx;
    margin: 25rpx;
}

.options {
    width: 100%;
    height: 100rpx;
    margin-top: 5rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 2rpx #e1e1e1 solid;
}
.options .img_text {
    display: flex; 
    align-items: center;
}

.options .icon {
    width: 58rpx;
    height: 58rpx;
    margin-left: 25rpx;
}

.options text {
    margin-left: 20rpx;
    font-size: 32rpx;
}

.options .arrow {
    width: 32rpx;
    height: 32rpx;
    margin-right: 25rpx;
}