<form>
    <view class="inputs">
        <text>设备ID</text>
        <input type="text" placeholder="请输入设备ID" placeholder-class="placeholder" bindinput="IDInput"></input>
    </view>
    <view class="inputs">
        <text>设备名称</text>
        <input type="text" placeholder="请输入设备名称" bindinput="nameInput"></input>
    </view>
    <view class="inputs">
        <text>管理人</text>
        <input type="text" placeholder="管理者" bindinput="managerInput"></input>
    </view>
    <view class="inputs">
        <text>存放场地</text>
        <input type="text" placeholder="请输入存放场地" bindinput="placeInput"></input>
    </view>
    <view class="area">
        <text>详细描述</text>
        <textarea placeholder="详细描述设备的用途，参数等" bindinput="desInput"></textarea>
    </view>
     <view class="time">
        <text>借用时间</text>
        <input type="text" placeholder="2019-10-1至2021-10-1" bindinput="timeInput"></input>
    </view>
    <view class="inputs">
        <text>上传照片</text>
        <button size="mini" bindtap="uploadImg">选择图片</button>
    </view>
    <view class="bottom">
        <button type="primary" bindtap="handin">提交</button>
    </view>
</form>