<!-- 设备信息 -->
<view class="device">
    <view class="img">
        <image src="/img/global/device.png"></image>
    </view>
    <view class="device_info">
        <text style="font-size:32rpx;">{{d_no}}</text>
        <text style="font-size:32rpx;">{{d_name}}</text>
    </view>
</view>

<!-- 申请人 -->
<view wx:for="{{reservation}}" wx:key="index">
    <view class="application">
        <view class="info">
            <view>
                <text style="color: #000000;font-size:40rpx;margin-right:40rpx;">{{item.u_name}}</text>
                <text>{{item.u_type}}</text>
            </view>
            <text>申请时间：{{item.r_reservationDate}}</text>
            <text>借用时间：{{item.r_startDate}}--{{item.r_returnDate}}</text>
        </view>
        <view class="credit">
            <text>信用分</text>
            <text>{{item.u_creditGrade}}</text>
        </view>
    </view>
    <view class="buttons">
        <text data-index="{{index}}" bindtap="changeDate" style="background-color: #eeeeee; color:#607D8B; border-radius:15%">修改时间</text>
        <text data-index="{{index}}" bindtap="reject" style="background-color: #eeeeee; color:#607D8B; border-radius:15%">拒绝租借</text>
        <text data-index="{{index}}" bindtap="confirm" style="background-color: #607D8B; color:#ffffff; border-radius:15%">确认租借</text>
    </view>
</view>